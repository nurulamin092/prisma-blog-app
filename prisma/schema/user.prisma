model User {
    id            String    @id
    name          String
    email         String
    emailVerified Boolean   @default(false)
    image         String?
    createdAt     DateTime  @default(now())
    updatedAt     DateTime  @updatedAt
    sessions      Session[]
    accounts      Account[]

    role   String? @default("USER")
    phone  String?
    status String? @default("ACTIVE")

    @@unique([email])
    @@map("user")
}
